<div class="container">
  <h1>Restaurants</h1>
    <% @restaurants.each do |r| %>
    <div class="card m-1 p-2 rounded">
      <p><%= link_to r.name, restaurant_path(r.id)  %>
         <em><%= r.category %></em>
      </p>
      </div>
    <% end %>

  <p><%= link_to "+ Add a new restaurant", new_restaurant_path, class: "btn btn-primary stretch" %></p>
</div>

